#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */  
    string str;
    cin>>str;
    int n=str.length();
    bool ispalindrome=true;
    for(int i=0,j=n-1;i<=1;i++,j--){
        if(str[i]!=str[j]){
            ispalindrome=false;
            break;
        }
        else{
            ispalindrome=true;
        }
        }
        if(ispalindrome==true){
            cout<<"YES";
        }
    else{
        cout<<"NO";
    }
    return 0;
    }

